pipeline {
    agent any

    tools {
        maven 'maven'
    }

    environment {
        REPO_URL = 'https://github.com/Sukanya992/maven.git'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: "${REPO_URL}",branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Publish to Nexus') {
            steps {
                sh 'mvn deploy'
            }
        }
    
        
    }
}
